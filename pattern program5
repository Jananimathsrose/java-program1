class Main {
    public static void main(String[] args) {
        int row=4;
        for(int i=1;i<=4;i++){
            for(int j=i;j<4;j++){
                System.out.print(" ");
            }
            for(int a=1;a<=i;a++){
             System.out.print("* ");
    }
    System.out.println();
        }
}
}  


